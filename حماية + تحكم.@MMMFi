@bot.message_handler(func=lambda message: message.text == 'Ø§Ù„Ù…Ø§Ù„Ùƒ')
def get_group_owner(message):
    if message.chat.type == 'supergroup' or message.chat.type == 'group':
        chat_id = message.chat.id
        chat_admins = bot.get_chat_administrators(chat_id)

        for admin in chat_admins:
            if admin.status == 'creator':
                owner_id = admin.user.id
                owner_username = admin.user.username
                owner_name = admin.user.first_name

                if hasattr(admin.user, 'photo'):
                    owner_photo_id = admin.user.photo.big_file_id
                    bot.send_photo(message.chat.id, owner_photo_id)

                reply = f'''- ğ†ğ‘ğğ—¨ğ ğğ–ğğ„ğ‘ âœ… |

â€¢ ğ—¨ğ’ğ„ğ‘ğğ€ğŒğ„ :- @{owner_username} 
â€¢ ğğ€ğŒğ„ :- {owner_name}
â€¢ ğˆğƒ :- {owner_id}'''
                bot.reply_to(message, reply)
                return
        bot.reply_to(message, 'Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Ø§Ù„Ù…Ø§Ù„Ùƒ ÙÙŠ Ù‡Ø°Ù‡ Ø§Ù„Ù…Ø¬Ù…ÙˆØ¹Ø©.')

    else:
        bot.reply_to(message, 'Ù‡Ø°Ø§ Ø§Ù„Ø£Ù…Ø± ÙŠÙ…ÙƒÙ† Ø§Ø³ØªØ®Ø¯Ø§Ù…Ù‡ ÙÙ‚Ø· ÙÙŠ Ø§Ù„Ù…Ø¬Ù…ÙˆØ¹Ø§Øª.')

@bot.message_handler(func=lambda message: message.text.startswith('Ø­Ø¸Ø±') and message.reply_to_message is not None)
def ban(message):
    if str(message.from_user.id) != admin_id:
        bot.send_message(message.chat.id, "Ø£Ù†Øª Ù…Ùˆ Ù…Ø´Ø±Ù")
    else:
        cid = message.chat.id
        uid = message.reply_to_message.from_user.id
        bot.kick_chat_member(cid, uid)
        bot.send_message(cid, "ØªÙ… Ø­Ø¸Ø± Ø§Ù„Ø¹Ø¶Ùˆ Ø¨Ù†Ø¬Ø§Ø­")

@bot.message_handler(func=lambda message: message.text.startswith('Ø§Ù„ØºØ§Ø¡ Ø§Ù„Ø­Ø¸Ø±') and message.reply_to_message is not None)
def unban(message):
    if str(message.from_user.id) != admin_id:
        bot.send_message(message.chat.id, "Ø£Ù†Øª Ù…Ùˆ Ù…Ø´Ø±Ù")
    else:
        cid = message.chat.id
        uid = message.reply_to_message.from_user.id
        bot.unban_chat_member(cid, uid)
        bot.send_message(cid, "ØªÙ… Ø¥Ù„ØºØ§Ø¡ Ø­Ø¸Ø± Ø§Ù„Ø¹Ø¶Ùˆ Ø¨Ù†Ø¬Ø§Ø­")                           
muted_users = {}

@bot.message_handler(func=lambda message: message.text == 'ØªÙ‚ÙŠÙŠØ¯')
def handle_mute(message):
    chat_id = message.chat.id
    user_id = message.reply_to_message.from_user.id
    bot.restrict_chat_member(chat_id, user_id, can_send_messages=False)
    bot.reply_to(message.reply_to_message, "*- ØªÙ… ØªÙ‚ÙŠÙŠØ¯Ùƒ ÙÙŠ Ø§Ù„Ù…Ø¬Ù…ÙˆØ¹Ø© ğŸ“› .*",parse_mode="Markdown")

@bot.message_handler(func=lambda message: message.text == 'Ø§Ù„ØºØ§Ø¡ Ø§Ù„ØªÙ‚ÙŠÙŠØ¯')
def handle_unmute(message):
    chat_id = message.chat.id
    user_id = message.reply_to_message.from_user.id
    bot.restrict_chat_member(chat_id, user_id, can_send_messages=True)
    bot.reply_to(message.reply_to_message, "*- ØªÙ… Ø¥Ù„ØºØ§Ø¡ ØªÙ‚ÙŠÙŠØ¯Ùƒ Ø¨Ù†Ø¬Ø§Ø­ âœ… .*",parse_mode="Markdown")

@bot.message_handler(func=lambda message: message.reply_to_message and message.reply_to_message.from_user.id == bot.get_me().id)
def handle_user_messages(message):
    chat_id = message.chat.id
    user_id = message.from_user.id
    if user_id in muted_users and muted_users[user_id] == chat_id:
        try:
            bot.delete_message(chat_id, message.message_id)
        except telebot.apihelper.ApiTelegramException as e:
            if "message to delete not found" in str(e):
                bot.send_message(chat_id, "Ø§Ù„Ø±Ø³Ø§Ù„Ø© Ø§Ù„ØªÙŠ Ø·Ù„Ø¨Øª Ø­Ø°ÙÙ‡Ø§ ØºÙŠØ± Ù…ÙˆØ¬ÙˆØ¯Ø©")
            else:
                raise e

@bot.message_handler(func=lambda message: message.reply_to_message and message.reply_to_message.from_user.id == bot.get_me().id)
def handle_mute_unmute_confirmation(message):
    user_id = message.reply_to_message.from_user.id
    chat_id = message.chat.id
    if message.text == 'ØªÙ‚ÙŠÙŠØ¯':
        muted_users[user_id] = chat_id
        bot.reply_to(message.reply_to_message, "*- ØªÙ… ØªÙ‚ÙŠÙŠØ¯ Ø§Ù„Ø´Ø®Øµ âœ… .*",parse_mode="Markdown")
    elif message.text == 'Ø¥Ù„ØºØ§Ø¡ ØªÙ‚ÙŠÙŠØ¯':
        if user_id in muted_users and muted_users[user_id] == chat_id:
            del muted_users[user_id]
            bot.reply_to(message.reply_to_message, "*ØªÙ… Ø¥Ù„ØºØ§Ø¡ Ø§Ù„ØªÙ‚ÙŠÙŠØ¯*",parse_mode="Markdown")

@bot.message_handler(func=lambda message: message.text and message.reply_to_message and message.text.startswith("ØªÙ‚ÙŠÙŠØ¯ ÙˆÙ‚ØªÙŠ"))
def restrict_user(message):
    if message.from_user.id not in [admin.user.id for admin in bot.get_chat_administrators(message.chat.id)]:
        bot.reply_to(message, "á¥€ Ø§Ù†Øª Ù…Ùˆ Ù…Ø´Ø±Ù á¥€")
        return
    user_id = message.reply_to_message.from_user.id
    bot.restrict_chat_member(message.chat.id, user_id, until_date=int(time.time())+600)
    bot.reply_to(message.reply_to_message, "á¥€ ØªÙ… ØªÙ‚ÙŠÙŠØ¯Ùƒ ØªÙ‚ÙŠÙŠØ¯ ÙˆÙ‚ØªÙŠ á¥€")
    time.sleep(600)
    bot.restrict_chat_member(message.chat.id, user_id, can_send_messages=True, can_send_media_messages=True, can_send_other_messages=True, can_add_web_page_previews=True)
    bot.reply_to(message.reply_to_message, "á¥€ ØªÙ… Ø§Ù†ØªÙ‡Ø§Ø¡ Ù…Ø¯Ø© ØªÙ‚ÙŠÙŠØ¯Ùƒ Ù‡Ø³Ù‡ ØªÙƒØ¯Ø± ØªØ­Ø¬ÙŠ Ø¨Ø±Ø§Ø­ØªÙƒ Ø­Ø¨ÙŠØ¨ÙŠ á¥€")

