    bot.register_next_step_handler(message, add_response_content, keyword)

def add_response_content(message, keyword):
    content_type = message.content_type
    content = None
    description = None
    
    if content_type == 'text':
        content = message.text
    elif content_type == 'photo':
        content = message.photo[-1].file_id
        description = message.caption
    elif content_type == 'video':
        content = message.video.file_id
        description = message.caption
    elif content_type == 'sticker':
        content = message.sticker.file_id

    if content:
        responses[keyword] = {"content_type": content_type, "content": content, "description": description}
        bot.reply_to(message, "*- ØªÙ… Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø±Ø¯ Ø¨Ù†Ø¬Ø§Ø­ âœ…. *",parse_mode="markdown")
        
    else:
        bot.reply_to(message, 'Ø­Ø¯Ø« Ø®Ø·Ø£ Ø£Ø«Ù†Ø§Ø¡ Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø±Ø¯. ÙŠØ±Ø¬Ù‰ Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ù‡ Ù…Ø±Ù‡ Ø§Ø®Ø±Ù‰')
               
def delete_response(message):
    keyword = message.text
    if keyword in responses:
        del responses[keyword]
        bot.reply_to(message, "*- ØªÙ… Ø­Ø°Ù Ø§Ù„Ø±Ø¯ Ø¨Ù†Ø¬Ø§Ø­ âœ…. *",parse_mode="markdown")
    else:
        bot.reply_to(message, '*- Ù„Ø§ ÙŠÙˆØ¬Ø¯ Ø±Ø¯ Ù„Ù‡Ø°Ù‡ Ø§Ù„ÙƒÙ„Ù…Ø© ÙÙŠ Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ø±Ø¯ÙˆØ¯â—. *',parse_mode="markdown")

def list_responses(message):
    if responses:
        response_list = "Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ø±Ø¯ÙˆØ¯:\n"
        for keyword, response in responses.items():
            response_list += f"Ø§Ù„ÙƒÙ„Ù…Ø© Ø§Ù„Ù…ÙØªØ§Ø­ÙŠØ©: {keyword}\n"
            response_list += f"Ù†ÙˆØ¹ Ø§Ù„Ø±Ø¯: {response['content_type']}\n"
            response_list += f"Ø§Ù„ÙˆØµÙ: {response['description']}\n\n"
        
        bot.reply_to(message, response_list)
    else:
        bot.reply_to(message, "*- Ù„Ø§ ØªÙˆØ¬Ø¯ Ø±Ø¯ÙˆØ¯ Ù…Ø¶Ø§ÙØ© Ø­ØªÙ‰ Ø§Ù„Ø¢Ù† âŒ. *",parse_mode="markdown")

def respond(message):
    keyword = message.text
    response = None
    
    for key, value in responses.items():
        if key in keyword:
            response = value
            break
    
    if response:
        content_type = response["content_type"]
        content = response["content"]
        description = response["description"]
        
        if content_type == 'text':
            bot.reply_to(message, content)
        elif content_type == 'photo':
            bot.send_photo(message.chat.id, content, caption=description)
        elif content_type == 'video':
            bot.send_video(message.chat.id, content, caption=description)
        elif content_type == 'sticker':
            bot.send_sticker(message.chat.id, content)

def get_user_role(chat_id, user_id):
    try:
        chat_member = bot.get_chat_member(chat_id, user_id)
        return chat_member.status
    except Exception as e:
        print(e)
        return None                                  
                                 
warnings = {}
restricted_users = []

@bot.message_handler(func=lambda message: message.chat.type == 'group' or message.chat.type == 'supergroup')
def handle_group_message(message):
    if message.reply_to_message and is_admin(message.from_user.id, message.chat.id):
        user_id = message.reply_to_message.from_user.id
        if "ØªØ­Ø°ÙŠØ±" in message.text:
            if user_id in restricted_users:
                bot.reply_to(message, "*- ØªÙ… ØªØ­Ø°ÙŠØ± Ù‡Ø°Ø§ Ø§Ù„Ø´Ø®Øµ 3 Ù…Ø±Ø§Øª Ø³Ø§Ø¨Ù‚Ø§Ù‹ ÙˆØªÙ… ØªÙ‚ÙŠÙŠØ¯Ù‡ØŒ Ù„Ù€ ØªÙ‚ÙŠÙŠØ¯ Ø§Ù„Ø´Ø®Øµ Ù…Ø±Ø© Ø£Ø®Ø±Ù‰ Ø§Ø±Ø³Ù„ Ø§Ù„Ø£Ù…Ø±* ØªÙ‚ÙŠÙŠØ¯ *Ø¨Ø§Ù„Ø±Ø¯ Ø¹Ù„ÙŠØ© ğŸ“›.*", parse_mode="Markdown")
            else:
                if user_id not in warnings:
                    warnings[user_id] = 1
                else:
                    warnings[user_id] += 1
                if warnings[user_id] == 3:
                    bot.restrict_chat_member(message.chat.id, user_id, until_date=0)
                    restricted_users.append(user_id)
                    bot.reply_to(message, f"*- ØªÙ… ØªÙ‚ÙŠÙŠØ¯ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…* [{message.reply_to_message.from_user.first_name}](tg://user?id={user_id}) *Ø¨Ù†Ø¬Ø§Ø­ Ø¨Ø³Ø¨Ø¨ ØªØ­Ø°ÙŠØ±Ù‡ Ø«Ù„Ø§Ø« Ù…Ø±Ø§Øª!* âœ…", parse_mode="Markdown")
                else:
                    warning_message = "ØªØ­Ø°ÙŠØ±!"
                    if warnings[user_id] == 2:
                        warning_message += f" Ù„Ø¯ÙŠÙƒ *ØªØ­Ø°ÙŠØ±ÙŠÙ†* Ù…Ù† Ø§ØµÙ„ *Ø«Ù„Ø§Ø«ØŒ ÙƒÙ† Ø­Ø°Ø±Ø§Ù‹ âš ï¸.*\n\n[{message.reply_to_message.from_user.first_name}](tg://user?id={user_id})"
                    else:
                        warning_message += f" Ù„Ø¯ÙŠÙƒ ØªØ­Ø°ÙŠØ± *ÙˆØ§Ø­Ø¯* Ù…Ù† Ø§ØµÙ„ *Ø«Ù„Ø§Ø« ÙƒÙ† Ø­Ø°Ø±Ø§Ù‹ âš ï¸.*\n\n[{message.reply_to_message.from_user.first_name}](tg://user?id={user_id})"
                    bot.reply_to(message, warning_message, parse_mode="Markdown")

def is_admin(user_id, chat_id):
    admins = bot.get_chat_administrators(chat_id)
    admin_ids = [admin.user.id for admin in admins]
    return user_id in admin_ids

