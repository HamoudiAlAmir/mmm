@bot.message_handler(func=lambda message: message.text == "Ø§Ø³Ù…ÙŠ")
def send_name(message):
    chat_id = message.chat.id
    chat_info = bot.get_chat(chat_id)
    first_name = chat_info.first_name
    last_name = chat_info.last_name

    if first_name and last_name:
        bot.reply_to(message, f"ğ˜ğğ—¨ğ‘ ğğ€ğŒğ„ ğˆğ’ : {first_name} {last_name}")
    elif first_name:
        bot.reply_to(message, f"ğ˜ğğ—¨ğ‘ ğğ€ğŒğ„ ğˆğ’ : {first_name}")
    else:
        bot.reply_to(message, "*I couldn't find your name.*",parse_mode="markdown")

